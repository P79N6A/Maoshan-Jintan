page {
  background-color: #efefef;
}

.phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  height: 70rpx;
  border-bottom: 1px solid #dcdcdc;
  margin-top: 40rpx;
  padding-left: 30rpx;
  background-color: #fff;
}

.phone input {
  margin-left: 45rpx;
}

.pwd {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #fff;
}

.pwd-input {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.pwd-input input {
  margin-left: 45rpx;
}

.get-pwd {
  width: 150rpx;
  height: 45rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1px solid #00a0e8;
  color: #00a0e8;
  border-radius: 10rpx;
}

.register {
  width: 680rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  font-size: 35rpx;
  color: #fff;
  background-color: #ff9a14;
  margin: 50rpx auto;
  border-radius: 15rpx;
}

.wx-register {
  width: 390rpx;
  height: 65rpx;
  border: 1px solid #57cb5e;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 60rpx auto;
  border-radius: 30rpx;
}

.wx-register image {
  width: 42rpx;
  height: 34rpx;
  margin-left: 48rpx;
}

.wx-register text {
  font-size: 28rpx;
  color: #57cb5e;
  margin-left: 30rpx;
}
