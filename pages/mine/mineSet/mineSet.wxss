page {
  background-color: #f4f4f4;
}

.headShot {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 220rpx;
  background-color: #fff;
}

.headShot image {
  width: 145rpx;
  height: 145rpx;
  border-radius: 50%;
}

.name, .sex {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  height: 75rpx;
  background-color: #fff;
  border-bottom: 1px solid #dcdcdc;
}

.name {
  margin-top: 10rpx;
}

.name text, .sex text {
  font-size: 25rpx;
  color: #010101;
}

.name input, .sex input {
  font-size: 20rpx;
  margin-left: 160rpx;
}

.save {
  width: 460rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #00a0e8;
  color: #fff;
  border-radius: 15rpx;
  font-size: 28rpx;
  margin: 30rpx auto;
}
